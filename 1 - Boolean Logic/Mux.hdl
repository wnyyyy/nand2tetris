/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // ~sel -> a ^ sel -> b
    // (sel v a) ^ (~sel v b)
    Or(a=a, b=sel, out=aorsel);
    Not(in=sel, out=notsel);
    Or(a=notsel, b=b, out=notselorb);
    And(a=aorsel, b=notselorb, out=out);
}